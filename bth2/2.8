def fibonacci_less_than_n(n):
    fib_list = []
    a, b = 0, 1
    while b < n:
        fib_list.append(b)
        a, b = b, a + b
    
    fib_sum = sum(fib_list)
    
    print("Dãy số Fibonacci nhỏ hơn {}: {}".format(n, fib_list))
    return fib_list, fib_sum

